<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:gravity="center"
    tools:context="com.example.thongle.lab03_1.MainActivity">

    <Button
        android:id="@+id/btn_alert_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alertdialog"/>
    <Button
        android:id="@+id/btn_custom_alert_dialog_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/custom_alertdialog1"/>
    <Button
        android:id="@+id/btn_custom_alert_dialog_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/custom_alertdialog2"/>

</LinearLayout>
